<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<GridPane styleClass="mainpane" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints percentWidth="25.0" />
      <ColumnConstraints hgrow="ALWAYS" />
    <ColumnConstraints percentWidth="25.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints percentHeight="15.0" />
    <RowConstraints percentHeight="20.0" />
    <RowConstraints percentHeight="10.0" />
      <RowConstraints percentHeight="15.0" />
      <RowConstraints minHeight="10.0" percentHeight="5.0" prefHeight="30.0" />
      <RowConstraints percentHeight="15.0" />
      <RowConstraints percentHeight="20.0" />
  </rowConstraints>
   <children>
      <Label alignment="CENTER" styleClass="nidhogg" stylesheets="@stylesheet.css" text="Nidhogg" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
      <Button fx:id="mainMenuButton" cancelButton="true" mnemonicParsing="false" onAction="#mainMenu" styleClass="exit" stylesheets="@stylesheet.css" text="Main Menu" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
      <GridPane GridPane.columnIndex="1" GridPane.rowIndex="3">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints percentHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints percentHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label styleClass="optionslabel" stylesheets="@stylesheet.css" text="Music" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <CheckBox fx:id="musicBox" mnemonicParsing="false" onAction="#toggleMusic" selected="true" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1">
               <font>
                  <Font size="24.0" />
               </font>
            </CheckBox>
         </children>
      </GridPane>
   </children>
</GridPane>
